<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowActionBar">true</item>
    </style>

    <style name="Theme.Medmetheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_medmetheme</item>
        <item name="popupMenuStyle">@style/PopupMenu.Medmetheme</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Medmetheme</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Medmetheme</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Medmetheme</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Medmetheme</item>
        <item name="actionModeBackground">@drawable/cab_background_top_medmetheme</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_medmetheme</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Medmetheme</item>
        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Medmetheme.Widget</item>

    </style>

    <style name="ActionBar.Solid.Medmetheme" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_medmetheme</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_medmetheme</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_medmetheme</item>
        <item name="progressBarStyle">@style/ProgressBar.Medmetheme</item>
        <item name="android:icon">@mipmap/ic_launcher</item>
    </style>

    <style name="ActionBar.Transparent.Medmetheme" parent="Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_medmetheme</item>
        <item name="progressBarStyle">@style/ProgressBar.Medmetheme</item>
        <item name="android:icon">@mipmap/ic_launcher</item>
    </style>

    <style name="PopupMenu.Medmetheme" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_medmetheme</item>
    </style>

    <style name="DropDownListView.Medmetheme" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_medmetheme</item>
    </style>

    <style name="ActionBarTabStyle.Medmetheme" parent="Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_medmetheme</item>
    </style>

    <style name="DropDownNav.Medmetheme" parent="Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_medmetheme</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_medmetheme</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_medmetheme</item>
    </style>

    <style name="ProgressBar.Medmetheme" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_medmetheme</item>
    </style>

    <style name="ActionButton.CloseMode.Medmetheme" parent="Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_medmetheme</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Medmetheme.Widget" parent="Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Medmetheme</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Medmetheme</item>
    </style>

    <!-- text to be used with buttons -->
    <style name="button_text" >
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#ffffff</item>
        <item name="android:gravity" >center</item>
        <item name="android:layout_margin" >3dp</item>
        <item name="android:textSize" >18dp</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:shadowColor" >#000000</item>
        <item name="android:shadowDx" >1</item>
        <item name="android:shadowDy" >1</item>
        <item name="android:shadowRadius" >2</item>
    </style>

    <style name="text_view_text" >
        <item name="android:textColor" >#ffffff</item>
        <item name="android:textSize" >18dp</item>
        <item name="android:textStyle" >bold</item>
    </style>

    <style name="edit_text" >
        <item name="android:textColor" >#ffffff</item>
        <item name="android:textSize" >18dp</item>
        <item name="android:textStyle" >bold</item>
    </style>

    <style name="paragraph_text" >
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >wrap_content</item>
        <item name="android:textColor" >#ffffff</item>
        <item name="android:layout_margin" >3dp</item>
        <item name="android:textSize" >17dp</item>
        <item name="android:textStyle" >bold</item>
        <item name="android:shadowColor" >#000000</item>
        <item name="android:shadowDx" >1</item>
        <item name="android:shadowDy" >1</item>
        <item name="android:shadowRadius" >2</item>
    </style>

    <!-- Admin Theme -->
    <style name="Theme.Medmethemeadmin" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_medmethemeadmin</item>
        <item name="popupMenuStyle">@style/PopupMenu.Medmethemeadmin</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Medmethemeadmin</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Medmethemeadmin</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Medmethemeadmin</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Medmethemeadmin</item>
        <item name="actionModeBackground">@drawable/cab_background_top_medmethemeadmin</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_medmethemeadmin</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Medmethemeadmin</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Medmethemeadmin.Widget</item>

    </style>

    <style name="ActionBar.Solid.Medmethemeadmin" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_medmethemeadmin</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_medmethemeadmin</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_medmethemeadmin</item>
        <item name="progressBarStyle">@style/ProgressBar.Medmethemeadmin</item>
    </style>

    <style name="ActionBar.Transparent.Medmethemeadmin" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/ab_transparent_medmethemeadmin</item>
        <item name="progressBarStyle">@style/ProgressBar.Medmethemeadmin</item>
    </style>

    <style name="PopupMenu.Medmethemeadmin" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_medmethemeadmin</item>
    </style>

    <style name="DropDownListView.Medmethemeadmin" parent="@style/Widget.AppCompat.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_medmethemeadmin</item>
    </style>

    <style name="ActionBarTabStyle.Medmethemeadmin" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_medmethemeadmin</item>
    </style>

    <style name="DropDownNav.Medmethemeadmin" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_medmethemeadmin</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_medmethemeadmin</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_medmethemeadmin</item>
    </style>

    <style name="ProgressBar.Medmethemeadmin" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_medmethemeadmin</item>
    </style>

    <style name="ActionButton.CloseMode.Medmethemeadmin" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_medmethemeadmin</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Medmethemeadmin.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Medmethemeadmin</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Medmethemeadmin</item>
    </style>
    <style name="Theme.Medmetheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Medmetheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Medmetheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
