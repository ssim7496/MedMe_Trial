<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/default_background"
    tools:context="com.example.siyo_pc.medme_trial.AdminSicknessesUpdateFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/row7"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="@string/SelectSickness"
                        style="@style/text_view_text"
                        android:id="@+id/tvAdminUpdateSelectSickness" />

                    <Spinner
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinnerAdminUpdateSickness"
                        android:layout_weight="1" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/row1"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="55dp"
                        android:text="@string/lblSicknessName"
                        style="@style/text_view_text"
                        android:id="@+id/tvAdminUpdateSicknessName" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edtAdminUpdateSicknessNameUpdate"
                        android:text=""
                        style="@style/edit_text"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/row2"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:text="@string/lblSicknessGreekName"
                        style="@style/text_view_text"
                        android:id="@+id/tvAdminUpdateSicknessGreekName" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:id="@+id/edtAdminUpdateSicknessGreekNameUpdate"
                        android:textStyle="italic"
                        android:text=""
                        style="@style/edit_text"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/row3"
                    android:layout_margin="10dp">

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:text="@string/lblSicknessDesc"
                        android:inputType="textMultiLine"
                        android:ems="10"
                        style="@style/text_view_text"
                        android:id="@+id/tvAdminUpdateSicknessDesc" />

                    <EditText
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:id="@+id/edtAdminUpdateSicknessDescUpdate"
                        android:text=""
                        style="@style/edit_text"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row5"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/SelectSicknessDisease"
                    style="@style/text_view_text"
                    android:id="@+id/tvAdminUpdateSicknessSelectDisease" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/row11"
                    android:gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/text_view_text"
                        android:layout_marginRight="20dp"
                        android:id="@+id/tvAdminSlaveSelectedDiseaseUpdate" />
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/row6"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="@string/SelectSicknessSymptom"
                    style="@style/text_view_text"
                    android:id="@+id/tvAdminUpdateSicknessSelectSymptom" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/row12"
                    android:gravity="right">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        style="@style/text_view_text"
                        android:layout_marginRight="20dp"
                        android:id="@+id/tvAdminSlaveSelectedSymptomUpdate" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/row4"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <Button
                    android:layout_width="0dip"
                    android:layout_weight="0.1"
                    android:layout_height="match_parent"
                    android:background="@drawable/grid_button"
                    style="@style/button_text"
                    android:id="@+id/btnAdminConfirmCancelSicknessUpdate"
                    android:text="@string/Cancel"
                    />
                <Button
                    android:layout_width="0dip"
                    android:layout_weight="0.1"
                    android:layout_height="match_parent"
                    android:background="@drawable/grid_button"
                    style="@style/button_text"
                    android:id="@+id/btnAdminConfirmUpdateSicknessUpdate"
                    android:text="@string/Update"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
