<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:background="@color/default_background"
    tools:context="com.example.siyo_pc.medme_trial.GuestSicknessViewFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tvSicknessTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sickness Name"
            android:textColor="@color/default_text_colour"
            android:textStyle="bold"
            android:textSize="30sp"
            android:padding="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FFFFFF">
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tvSicknessGreekName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sickness greek name goes inside here :)"
            android:textColor="@color/default_text_colour"
            android:textStyle="italic"
            android:textSize="18sp"
            android:padding="14sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/tvSicknessDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sickness description goes inside here :)"
            android:textColor="@color/default_text_colour"
            android:textStyle="bold"
            android:textSize="18sp"
            android:padding="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="2dip"
        android:background="#FFFFFF">
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="0.49"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/tvDiseasesTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Related Diseases"
                    android:textColor="@color/default_text_colour"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    android:padding="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#FFFFFF">
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/listViewRelatedDiseases"></ListView>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="2dp"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:background="@color/white">
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.49"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:id="@+id/tvSymptomsTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Related Symptoms"
                    android:textColor="@color/default_text_colour"
                    android:textStyle="bold"
                    android:textSize="26sp"
                    android:padding="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="2dip"
                android:background="#FFFFFF">
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <ListView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/listViewRelatedSymptoms"></ListView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
