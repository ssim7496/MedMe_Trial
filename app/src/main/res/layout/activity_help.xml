<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/default_background"
    tools:context="com.example.siyo_pc.medme_trial.Help">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/row1"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <Button
                    android:layout_width="0dip"
                    android:layout_weight="0.45"
                    android:layout_height="match_parent"
                    android:background="@drawable/grid_button_admin"
                    style="@style/button_text"
                    android:id="@+id/btnHelpAdd"
                    android:text="Adding"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/row2"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <Button
                    android:layout_width="0dip"
                    android:layout_weight="0.45"
                    android:layout_height="match_parent"
                    android:background="@drawable/grid_button_admin"
                    style="@style/button_text"
                    android:id="@+id/btnHelpUpdate"
                    android:text="Updating"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/row3"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <Button
                    android:layout_width="0dip"
                    android:layout_weight="0.45"
                    android:layout_height="match_parent"
                    android:background="@drawable/grid_button_admin"
                    style="@style/button_text"
                    android:id="@+id/btnHelpViewingInformation"
                    android:text="@string/view"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/row4"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <Button
                    android:layout_width="0dip"
                    android:layout_weight="0.45"
                    android:layout_height="match_parent"
                    android:background="@drawable/grid_button_admin"
                    style="@style/button_text"
                    android:id="@+id/btnHelpDiagnosing"
                    android:text="@string/diagnosing"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/row5"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">
                <Button
                    android:layout_width="0dip"
                    android:layout_weight="0.45"
                    android:layout_height="match_parent"
                    android:background="@drawable/grid_button_admin"
                    style="@style/button_text"
                    android:id="@+id/btnHelpSearching"
                    android:text="@string/searching"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
